<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect("/")
}%>

<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>


<form class="border" action="/inv/add-classification" method="post">
    <label>Classification Name:<input type="text" name="classification_name" required pattern="^[a-zA-Z]+$"></label>
    <div>Cannot contain a space or special character.</div>
    <input type="submit" value="Add Classification">
</form>